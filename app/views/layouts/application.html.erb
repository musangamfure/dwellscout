  <body>
     <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <main >
      <% if  controller_name != 'registrations' && controller_name != 'sessions' %>
      <%= render 'layouts/header'%>
       <% end %>
      <%= yield %>
    </main>
    
  </body>
</html>
