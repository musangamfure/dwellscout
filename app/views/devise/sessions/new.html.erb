

<div class="flex min-h-full flex-col justify-center py-8 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-16 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign In</h2>
  </div>

  <div class="mt-4 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-4 py-8 shadow sm:rounded-lg sm:px-12">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <%= render "devise/shared/error_messages", resource: resource %>

         <div>
           <%= f.label :"Email Adress", class:"block text-sm font-medium leading-6 text-gray-900"  %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:" mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm sm:leading-6" %>
        </div>

        <div class="mt-4">
          <%= f.label :Password, class:"block text-sm font-medium leading-6 text-gray-900"  %>
           
            <%= f.password_field :password, autocomplete: "new-password", class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm sm:leading-6"%>
        </div>


    

        <div class="flex items-center justify-between mt-6">

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
               <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-black focus:ring-black",type:"checkbox" %>
                <%= f.label :remember_me, class: "ml-3 block text-sm leading-6 text-gray-900" %>
            </div>
           <% end %>
    
          <div class="text-sm leading-6">

            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-semibold text-primary hover:text-primary-dark" %>
          <% end %>
          </div>
        </div>

        <div class="mt-4">
            <%= f.submit "Sign In", class:"flex w-full justify-center rounded-md bg-primary px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary " %>
          
            
            
        <p class="mt-10 text-center text-sm text-gray-500" >
        Don't have account?
        <%- if controller_name != 'registrations' %>
            <%= link_to "Sign Up", new_registration_path(resource_name), class: "font-semibold leading-6 text-primary hover:text-primary-dark" %> 
          <% end %>
      </p>
      </div>

      <% end %>
     
    </div>
  </div>
</div>

