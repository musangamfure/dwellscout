
<div class="flex min-h-full flex-col justify-center py-8 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-16 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign Up</h2>
  </div>

  <div class="mt-4 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-4 py-8 shadow sm:rounded-lg sm:px-12">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
         <%= render "devise/shared/error_messages", resource: resource %>

         <div>
           <%= f.label :"Email Adress", class:"block text-sm font-medium leading-6 text-gray-900"  %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:" mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm sm:leading-6" %>
        </div>

        <div class="mt-4">
          <%= f.label :Password, class:"block text-sm font-medium leading-6 text-gray-900"  %>
           
            <%= f.password_field :password, autocomplete: "new-password", class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm sm:leading-6"%>
        </div>

        <div class="flex items-center justify-between mt-6">
          <div class="flex items-center">
            <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-black-600 focus:ring-black">
            <label for="remember-me" class="ml-3 block text-sm leading-6 text-gray-900">Remember me</label>
          </div>

          <div class="text-sm leading-6">
            <a href="#" class="font-semibold text-black-600 hover:text-black-500">Forgot password?</a>
          </div>
        </div>

        <div class="mt-4">
            <%= f.submit "Sign up", class:"flex w-full justify-center rounded-md bg-primary px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary " %>
          
            
            
        <p class="mt-10 text-center text-sm text-gray-500" >
            Already have account?
            <% if controller_name != 'sessions' %>
            <%= link_to "Sign In", new_session_path(resource_name), class: "font-semibold leading-6 text-primary hover:text-primary-dark" %> 
          <% end %>
      </p>
      </div>

      <% end %>
     
    </div>
  </div>
</div>
